{
  "name": "tubenote",
  "version": "2.0.0",
  "description": "TubeNote is a web application that enhances the video-watching experience by enabling users to take intuitive and efficient notes while watching videos.",
  "main": "index.js",
  "repository": "https://github.com/Lahbiyeb-Ismail/tubenote_v2.git",
  "author": "Lahbiyeb Ismail <ismaillhbibe@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:server": "pnpm run --filter server dev",
    "dev:client": "pnpm run --filter client dev",
    "build:server": "pnpm run --filter server build",
    "build:client": "pnpm run --filter client build",
    "dev": "pnpm run --parallel -r dev",
    "build": "pnpm run --parallel -r build",
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check . --apply",
    "prepare": "is-ci || husky install",
    "db:generate": "pnpm run --filter server prisma:generate",
    "db:push": "pnpm run --filter server prisma:push"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@tubenote/shared": "link:packages/shared",
    "is-ci": "^4.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "biome check --apply-unsafe",
      "biome format --write"
    ]
  }
}
